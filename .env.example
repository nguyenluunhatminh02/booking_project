NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/booking?schema=public

REDIS_HOST=localhost
REDIS_PORT=6379

REDIS_URL=redis://localhost:6379
RBAC_CACHE_TTL_MS=300000      # 5 phút
RBAC_VERBOSE_ERRORS=0         # 0 (prod), 1 (dev để debug 403 chi tiết)

# Nếu chạy node ngoài Docker
KAFKA_CLIENT_ID=booking-api
KAFKA_TOPIC_PREFIX=dev.
KAFKA_GROUP_ID=booking-workers

# Outbox publisher
KAFKA_BROKERS=localhost:9094
OUTBOX_TOPIC_PREFIX=dev
OUTBOX_RELAY_BATCH=100
OUTBOX_RELAY_INTERVAL_MS=500
RUN_KAFKA_CONSUMER=1
EVENT_TOPICS=booking.held,booking.expired,booking.cancelled,booking.refunded,booking.paid,booking.confirmed
